<Window x:Class="Space.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space"
        mc:Ignorable="d"
        Title="Asteroid" Height="900" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="Grid">
        <Image x:Name="Canvas" Stretch="Fill" Source="{Binding CanvasSource, Mode=OneWay}"></Image>
        <Label x:Name="Score" Content="Score: 0" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" Height="55" BorderThickness="0,0,0,0" Foreground="White" Margin="0,3,0,0"></Label>
        <ProgressBar x:Name="ScoreBar" Minimum="0" Value="0" HorizontalAlignment="Center" Height="4" Margin="0,58,0,0" VerticalAlignment="Top" Width="250" Foreground="Red"/>
    </Grid>
</Window>
